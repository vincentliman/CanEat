@{
    Layout = "_VendorLayout";
}
<h1>Insert Food / Beverage</h1>

<form>
    <label>Food Name:</label>
    <input id="TxtFoodName" type="text" placeholder="Enter Food Name"/>
    <br />
    <label id="ErrFoodName"></label>
    <br />
    <label>Food Price:</label>
    <input id="TxtFoodPrice" type="text" placeholder="Enter Food Price"/>
    <br />
    <label id="ErrFoodPrice"></label>
    <br />
    <label>Food Photo:</label>
    <input id="TxtFoodPicture" type="file"/>
    <br />
    <label id="ErrFoodPicture"></label>
    <br />
    <label>Food Description:</label>
    <textarea id="TxtFoodDescription" placeholder="Enter Food Description"></textarea>
    <br />
    <label id="ErrFoodDescription"></label>
    <br />
    <button id="BtnInsert">Insert</button>
</form>

